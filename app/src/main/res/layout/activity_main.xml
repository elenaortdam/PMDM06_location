<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <!--Cuadro localizaci贸n actual-->

    <TextView
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_now"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.497" />

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.185"
            app:layout_constraintHorizontal_bias="0.0">

        <!--Latitud actual-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/current_latitude"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/actual_latitude_title"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/current_latitude_number"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    android:paddingEnd="30sp" />
        </LinearLayout>

        <!--Localizaci贸n actual-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/current_length"
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/actual_length_title"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/current_length_number"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    android:paddingEnd="30sp" />

        </LinearLayout>
    </LinearLayout>


    <!--Cuadro localizaci贸n objetivo-->

    <TextView
            android:text="@string/target_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target_location_title"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/distance_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.337" />

    <TextView
            android:text="TextView"
            android:layout_width="287dp"
            android:layout_height="17dp"
            android:id="@+id/textView4"
            tools:layout_editor_absoluteY="295dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <!--Cuadro latitud y longitud objetivo-->
    <LinearLayout
            android:id="@+id/target_location_square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.561"
            app:layout_constraintHorizontal_bias="0.0">

        <!--latitud objetivo-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/target_latitude"
                    android:layout_height="wrap_content"
                    android:text="@string/actual_latitude_title"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_weight="1"
                    tools:layout_editor_absoluteY="335dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:layout_width="0dp" />

            <EditText
                    android:id="@+id/target_latitude_number"
                    android:text="@string/zero"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingEnd="30sp"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <!--longitud objetivo-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/target_length"
                    android:text="@string/target_length"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingEnd="30sp"
                    android:clickable="true"
                    android:textAlignment="textStart"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="395dp"
                    tools:layout_editor_absoluteX="53dp" />

            <EditText
                    android:id="@+id/target_length_number"
                    android:text="@string/zero"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingEnd="30sp"
                    android:inputType="number"
                    android:textAlignment="textEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <!--    Bot贸n ok-->
    <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/distance_left"
            app:layout_constraintTop_toBottomOf="@+id/target_location_square"
            app:layout_constraintVertical_bias="0.233" />


    <TextView
            android:id="@+id/distance_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/distance_left"
            android:textAlignment="center"
            android:background="#2962FF"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>